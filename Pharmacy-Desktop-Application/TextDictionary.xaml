<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Pharmacy_Desktop_Application.StyleDictionaries">


    <Style TargetType="{x:Type TextBox}">
        <Setter Property="Background" Value="White"/>

    </Style>
    
    <Style TargetType="{x:Type TextBox}" x:Key="TransparentTextBox">
        <Setter Property="Background" Value="Transparent"/>
    </Style>


    <Style TargetType="{x:Type TextBlock}">

        <Setter Property="TextAlignment" Value="Right"></Setter>
        



        <Setter Property="FontFamily" Value="{StaticResource Canyon}"></Setter>


    </Style>

    <Style x:Key="Heading" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="24"></Setter>

    </Style>

    <Style x:Key="SubHeading" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="18"></Setter>
        <Setter Property="TextAlignment" Value="Right"></Setter>

    </Style>


    
    
</ResourceDictionary>