<Page x:Class="Pharmacy_Desktop_Application.DisplaySalesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pharmacy_Desktop_Application"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductSearchPage">

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel>
            <Button x:Name="btnAddSalesRecord" Click="BtnClickAddSalesRecord">Add Sales Record</Button>
            <Button x:Name="btnCSV" Click="BtnClickCSV">SAVE CSV</Button>
            <ListBox x:Name="lsbSalesRecord" MouseDoubleClick="LsbSalesRecord_MouseDoubleClick"/>
        </StackPanel>
    </Grid>
</Page>
