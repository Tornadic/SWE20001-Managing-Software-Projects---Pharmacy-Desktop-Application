<Page x:Class="Pharmacy_Desktop_Application.SalesMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pharmacy_Desktop_Application"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SalesMainPage">

    <Grid Background="White">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation= "Horizontal" Grid.Column="0" Grid.Row="0">

            <Button x:Name="btnMainSale" Click="BtnClickMainSale" Width="auto">Search Sale Page</Button>

            <Button x:Name="btnEditSale" Click="BtnClickEditSale" Width="auto">Edit Sale Page</Button>

            <Button x:Name="btnAddSale" Click="BtnClickAddSale" Width="auto">Add Sale Page</Button>

        </StackPanel>


        <!--this Prodcut Page Frame where the Add and Edit Product Page will be displayed -->
        <Frame x:Name="SaleFrame" NavigationUIVisibility="Hidden" Grid.Column="0" Grid.Row="1"/>


    </Grid>
</Page>
