<Page
      x:Class="Pharmacy_Desktop_Application.ChartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pharmacy_Desktop_Application"
      xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChartPage">
    <Page.DataContext>
        <local:ViewModel/>
    </Page.DataContext> 
    
    <Grid>
        <syncfusion:SfChart Header="Sales this Month" HorizontalAlignment="Center" Margin="10" VerticalAlignment="Center">
            <syncfusion:SfChart.PrimaryAxis>
                <syncfusion:NumericalAxis FontSize="10" Header="Days" Maximum="31" Minimum="0" ShowGridLines="False"/>
            </syncfusion:SfChart.PrimaryAxis>
            <syncfusion:SfChart.SecondaryAxis>
                <syncfusion:NumericalAxis FontSize="10" Header="Sales Made" Maximum="100" Minimum="0"/>
            </syncfusion:SfChart.SecondaryAxis>
            <syncfusion:ColumnSeries ItemsSource="{Binding Data}" XBindingPath="Day" YBindingPath="UnitSales" Palette="Elite" ShowTooltip="True"></syncfusion:ColumnSeries>
        </syncfusion:SfChart>
    </Grid>
</Page>
