<Application x:Class="Pharmacy_Desktop_Application.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Pharmacy_Desktop_Application"
             StartupUri="MainWindow.xaml">
    <Application.Resources>



        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--Button Styles-->
                <ResourceDictionary Source="StyleDictionaries/ButtonDictionary.xaml"/>

                <!--Text Styles (TextBlock and TextBox)-->
                <ResourceDictionary Source="StyleDictionaries/TextDictionary.xaml"/>

                <!--ComboBox styles-->

                <!--ListBox Styles-->
                <ResourceDictionary Source="StyleDictionaries/ListBoxDictionary.xaml"/>

                <!--Page Style-->
                <ResourceDictionary Source="StyleDictionaries/PageDictionary.xaml"/>


            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>




    </Application.Resources>
</Application>
